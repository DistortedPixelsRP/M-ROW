<div class="container" style="margin-top: 20px; float: center">

    <div class="row" style="float: space-between; float: center">

        <div id="status_widget" class="col-md-6" style="margin-top: 20px">

            <div class="card">

                <div class="card-header"> Statut </div>

                <div class="card-body" style="float: center">

                    <h5>Service :</h5>

                    <div class="card">
                        <div class="card-body align-self-center">

                            <button type="button" class="btn btn-success" id="startServiceBtn">En service</button>

                            <button type="button" class="btn btn-warning" id="civilServiceBtn">Service civil</button>

                            <button type="button" class="btn btn-danger" id="stopServiceBtn">Hors-service</button>

                        </div>

                    </div> <br />

                    <h5>Patrouille :</h5>

                    <div class="card">
                        <div class="card-body align-self-center">

                            <button type="button" class="btn btn-success" disabled>En cours</button>

                            <button type="button" class="btn btn-warning" disabled>Suspendue</button>

                            <button type="button" class="btn btn-danger" disabled>Terminée</button>

                        </div>

                    </div>

                </div>

            </div>

        </div>


        <div id="news_widget" class="col-md-6" style="margin-top: 20px">

            <div class="card">

                <div class="card-header"> Ordre du jour </div>

                <div class="card-body">

                    <h3>Niveau d'alerte : <b style="color: green" id="alert-level">Verte</b> </h3>
                    <h4>Ordre du jour :</h4>
                    <p id="ordersText">
                    </p>

                </div>

            </div>

        </div>



        <div id="online_widget" class="col-md-6" style="margin-top: 20px">

            <div class="card">

                <div class="card-header">Agents en ligne</div>

                <div class="card-body">

                    <div class="table-responsive">

                        <table class="table">

                            <thead class="thead-dark">

                                <tr>
                                    <th scope="col">Matricule</th>

                                    <th scope="col">Rang</th>

                                    <th scope="col">Nom</th>

                                    <th scope="col">Statut</th>

                                </tr>

                            </thead>

                            <tbody>

                                {{#each user}}

                                <tr>
                                    <th>{{matricule}}</th>
                                    <th>{{rank}}</th>
                                    <th>{{last_name}}</th>
                                    <th>{{status}}</th>
                                </tr>

                                {{/each}}

                            </tbody>

                        </table>

                    </div>

                </div>

            </div>

        </div>



        <div id="patrol_widget" class="col-md-6" style="margin-top: 20px">

            <div class="card">

                <div class="card-header"> Patrouilles </div>

                <div class="card-body">

                    <table class="table">

                        <thead class="thead-dark">

                            <tr>
                                <th scope="col">Patrouille</th>
                                <th scope="col">Pilote</th>
                                <th scope="col">Passager(s)</th>
                                <th scope="col">Statut</th>
                            </tr>

                        </thead>

                        <tbody>

                        </tbody>

                    </table>

                    <button type="button" class="btn btn-primary btn-sm" id="patrolStart" data-toggle="modal"
                        data-target="#patrolStartModal">Débuter une patrouille</button>
                    <button type="button" class="btn btn-secondary btn-sm" id="patrolDelete">Supprimer une
                        patrouille</button>

                </div>

            </div>

        </div>

    </div>

</div>
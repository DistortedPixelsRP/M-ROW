<div class="container" style="margin-top: 20px; float: center">

    <div class="row" style="float: space-between; float: center">

        <div id="gestion_" class="col-md-6" style="margin-top: 20px">

            <div class="card">

                <div class="card-header"> Ordre du jour </div>

                <div class="card-body">

                    <h4 style="text-align: center">Alerte :

                        <button type="button" class="btn btn-success" id="alert_green">Verte</button>

                        <button type="button" class="btn btn-warning" id="alert_yellow">Jaune</button>

                        <button type="button" class="btn btn-danger" id="alert_red">Rouge</button> </h4>

                    <h5>Ordre du jour :</h5>
                    <textarea class="form-control" id="ordrersTextIn" rows="3"></textarea>

                    <br />

                    <button type="button" class="btn btn-secondary" onclick="ordersModify()">Mettre à jour</button>


                </div> 

            </div>

        </div>



        <div id="gestion_ranks" class="col-md-6" style="margin-top: 20px">

            <div class="card">

                <div class="card-header"> Agents </div>

                <div class="card-body">

                    {{> agentsTable}}

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <button class="btn btn-outline-secondary" type="button" id="changeRank"
                                onclick="rankModify($('#mdfRank option:selected').val(), $('#mdfMatricule').val())">Modifier</button>
                        </div>
                        <select class="custom-select" id="mdfRank">
                            <option>Rang</option>
                            <option value="0">Licencié</option>
                            <option value="1">Cadet</option>
                            <option value="2">Officier</option>
                            <option value="3">Sergent</option>
                            <option value="4">Sergent-Chef</option>
                            <option value="5">Lieutenant</option>
                            <option value="6">Capitaine</option>
                            <option value="7">Major</option>
                            <option value="8">Commandant</option>
                            <option value="9">Directeur</option>
                            <option value="10">Administrateur</option>
                        </select>
                        <input type="text" class="form-control" maxlength="2" placeholder="Matricule" id="mdfMatricule">
                    </div>

                    <div class="alert" role="alert" id="rnkModifyMsg" style="display: none"></div>

                </div>

            </div>

        </div>


        <div id="gestion_newuser" class="col-md-6" style="margin-top: 20px">

            <div class="card">

                <div class="card-header"> Nouvel utilisateur </div>

                <div class="card-body" style="float: center">

                    <button type="button" id="btnNewKey" class="btn btn-primary btn-lg btn-block"
                        onclick="newKey()">Générer
                        une clef
                        d'inscription</button>

                    <button type="button" id="btnRemoveKeys" class="btn btn-secondary btn-lg btn-block"
                        onclick="removeKeys()">Supprimer les clefs existantes</button>

                </div>

            </div>

        </div>




    </div>

</div>